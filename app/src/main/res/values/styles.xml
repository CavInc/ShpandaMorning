<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--
    <style name="MyNumberPickerTheme" parent="@android:style/Widget.Material.NumberPicker">
        <item name="colorControlNormal ">#33691e</item>
        <item name="android:background">#b3e5fc</item>
        <item name="android:textSize">22sp</item>
    </style>
    -->

    <style name="MyNumberPickerTheme" >
        <item name="colorControlNormal ">#33691e</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyDayButtonNoSelect">
        <item name="android:background">@drawable/day_bt</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyDayButtonSelect">
        <item name="android:background">@drawable/day_bt_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="colorControlActivated">@color/bg_creen</item>

        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@android:color/holo_orange_dark</item>

        <!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:trackTint">@color/bg_creen</item>
    </style>

    <style name="SetAlarmText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
